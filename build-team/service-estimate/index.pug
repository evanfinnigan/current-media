include ../../common/mixins.pug
doctype html
html(lang='en')
  head
    +meta('../..')
    script(src='https://code.jquery.com/jquery-3.5.1.min.js' integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=' crossorigin='anonymous')
    script(src='../build-team.js')
    meta(name='description' content='Current Media - Service Estimate')
    title Add Services
  
  body
    header
      +nav('../..')

    main
      .squeeze.centered
        h1 Service Estimate
        br
        div
        +progress(3,3)

        div(class='card-reciept')
          div(class='card-header')
            //icon img() ?
            h2 Your Team
          div#service-reciept

        // /---------------\   /---------\
        // | Your Team (1) |   | Contact |
        // \---------------/   \---------/

        div(style='max-width: 350px; margin: auto; height: 150px; margin-top: 2em;')
          button(onclick='window.print()' style='display: inline-block; border-radius: 10px; border: 2px solid black; margin: 10px; padding: 10px; max-height: 50px;')
            h3(style='margin-top: 0; margin-bottom: 0;') Print
          button(onclick='window.location.href="/contact/"' style='display: inline-block; border-radius: 10px; border: 2px solid black; margin: 10px; padding: 10px; max-height: 50px;')
            h3(style='margin-top: 0; margin-bottom: 0;') Contact
      +footer('../..')