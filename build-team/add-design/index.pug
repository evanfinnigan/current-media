include ../../common/mixins.pug
doctype html
html(lang='en')
  head
    +meta('../..')
    script(src='./add-design.js')
    meta(name='description' content='Current Media - Add Design')
    title Choose Design Tier
  
  body
    header
      +nav('../..')

    main
      .squeeze.centered
        h1 Build Your Team
        br
        br
        +build-icons('design')
        +progress(1,3)
        
        // Put a card here:
        // /-----------------------------\
        // |        (icon) Design        |
        // |-----------------------------|
        // |      Platinum               |
        // |      ...                    |
        // |-----------------------------|
        // |  +   Add Another            |
        // |      Service                |
        // \-----------------------------/

        div(class='card')
          div(class='card-header')
            //icon img() ?
            h2 Design
          button(class='card-body platinum')
            h2 Platinum
            p Our platinum tier features many wonderful things!
          button(class='card-body gold')
            h2 Gold
            p Our gold tier features a bunch of cool stuff
          button(class='card-body silver')
            h2 Basic
            p Our basic tier features this, this, and this
          //- Hover on this for info box?
          button(class='card-footer')
            // img plus icon
            h2 Add Another Service
            

        // /---------------\   /---------\
        // | Your Team (1) |   | Contact |
        // \---------------/   \---------/

        // row? inline?
        div(style='max-width: 350px; margin: auto; height: 100px;')
          div(style='display: inline-block; border-radius: 10px; border: 5px solid black; margin: 10px; padding: 10px; float: left;')
            // badge, id #teamSize, modified by JS?
            h2 Your Team
          div(style='display: inline-block; border-radius: 10px; border: 5px solid black; margin: 10px; padding: 10px; float: right;')
            h2 Contact
        
      +footer('../..')