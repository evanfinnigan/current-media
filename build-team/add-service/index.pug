include ../../common/mixins.pug
doctype html
html(lang='en')
  head
    +meta('../..')
    script(src='https://code.jquery.com/jquery-3.5.1.min.js' integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=' crossorigin='anonymous')
    script(src='../build-team.js')
    meta(name='description' content='Current Media - Add Services')
    title Add Services
  
  body
    header
      +nav('../..')

    main
      .squeeze.centered
        h1 Build Your Team
        br
        br
        div
          +square-card-link-sm('design', 'design-icon.png', '/build-team/add-service/')
          +square-card-link-sm('video', 'video-icon.png', '/build-team/add-service/')
          +square-card-link-sm('social', 'social-icon.png', '/build-team/add-service/')
          +square-card-link-sm('web', 'web-icon.png', '/build-team/add-service/')
          +square-card-link-sm('photography', 'photo-icon.png', '/build-team/add-service/')
          //- +square-card-link-sm('consultation', 'consultation-icon.png', '/free-consultation')
        +progress(1,3)
        
        // Put a card here:
        // /-----------------------------\
        // |        (icon) Design        |
        // |-----------------------------|
        // |      Platinum               |
        // |      ...                    |
        // |-----------------------------|
        // |  +   Add Another            |
        // |      Service                |
        // \-----------------------------/

        div(class='card')
          div(class='card-header')
            //icon img() ?
            h2#service-name 
          button#tier1-btn(class='card-body platinum' onclick='addService(this, 1)')
            h2#tier1-name 
            p#tier1-desc 
          button#tier2-btn(class='card-body gold' onclick='addService(this, 2)')
            h2#tier2-name 
            p#tier2-desc 
          button#tier3-btn(class='card-body silver' onclick='addService(this, 3)')
            h2#tier3-name 
            p#tier3-desc 
          //- Hover on this for info box?
          button(class='card-footer' onclick='selectService("", "/build-team")')
            // img plus icon
            h2 Add Another Service
            

        // /---------------\   /---------\
        // | Your Team (1) |   | Contact |
        // \---------------/   \---------/

        div(style='max-width: 350px; margin: auto; height: 150px; margin-top: 2em;')
          button(onclick='window.location.href="/build-team/your-team/"' style='display: inline-block; border-radius: 10px; border: 2px solid black; margin: 10px; padding: 10px; max-height: 50px;')
            div#your-team-badge(style='margin-right: -20px; margin-left: auto; margin-top: -22px; width: 20px; height: 20px; color: white; background-color: red; font-size: 12px; border-radius: 15px; padding: 2px;')
            h3(style='margin-top: 0; margin-bottom: 0;') Your Team
          button(onclick='window.location.href="/contact/"' style='display: inline-block; border-radius: 10px; border: 2px solid black; margin: 10px; padding: 10px; max-height: 50px;')
            h3(style='margin-top: 0; margin-bottom: 0;') Contact
        
      +footer('../..')