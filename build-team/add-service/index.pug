include ../../common/mixins.pug
doctype html
html(lang='en')
  head
    +meta('../..')
    script(src='https://code.jquery.com/jquery-3.5.1.min.js' integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=' crossorigin='anonymous')
    script(src='../build-team.js')
    meta(name='description' content='Current Media - Add Services')
    title Add Services
  
  body
    header
      +nav('../..')

    main
      .squeeze.centered
        h1 Build Your Team
        div
          +square-card-link-sm('design', 'design-icon.png', '../add-service/', 'Graphic Design')
          +square-card-link-sm('video', 'video-icon.png', '../add-service/', 'Video Production')
          +square-card-link-sm('social', 'social-icon.png', '../add-service/', 'Social Media')
          +square-card-link-sm('web', 'web-icon.png', '../add-service/', 'Web Development')
          +square-card-link-sm('photo', 'photo-icon.png', '../add-service/', 'Photography')
          //- +square-card-link-sm('consultation', 'consultation-icon.png', '/free-consultation')
        
        br
        br
        +progress(1,3)
        br
        br
        
        // Put a card here:
        // /-----------------------------\
        // |        (icon) Design        |
        // |-----------------------------|
        // |      Platinum               |
        // |      ...                    |
        // |-----------------------------|
        // |  +   Add Another            |
        // |      Service                |
        // \-----------------------------/

        div#tiers(class='card' hidden)
          div(class='card-header')
            //icon img() ?
            h2#service-name 
          button#tier1-btn(class='card-body platinum' onclick='addService(this, 1)')
            h2#tier1-name 
            p#tier1-desc 
          button#tier2-btn(class='card-body gold' onclick='addService(this, 2)')
            h2#tier2-name 
            p#tier2-desc 
          button#tier3-btn(class='card-body silver' onclick='addService(this, 3)')
            h2#tier3-name 
            p#tier3-desc 
          //- Hover on this for info box?
          button(class='card-footer' onclick='selectService("", "../")')
            // img plus icon
            h2 Add Another Service
        
        #none-selected(hidden)
          h1 Choose a service above.

        // /---------------\   /---------\
        // | Your Team (1) |   | Contact |
        // \---------------/   \---------/

        .bottom-buttons
          button.btn(onclick='window.location.href="../your-team/"' style='display: inline-block;')
            #your-team-badge
            h3(style='margin-top: 0; margin-bottom: 0;') Your Team
          button.btn(onclick='window.location.href="../../contact/"' style='display: inline-block;')
            h3(style='margin-top: 0; margin-bottom: 0;') Contact
        
      +footer('../..')