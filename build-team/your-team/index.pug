include ../../common/mixins.pug
doctype html
html(lang='en')
  head
    +meta('../..')
    script(src='https://code.jquery.com/jquery-3.5.1.min.js' integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=' crossorigin='anonymous')
    script(src='../build-team.js')
    meta(name='description' content='Current Media - Your Team')
    title Add Services
  
  body
    header
      +nav('../..')

    main
      .squeeze.centered
        h1 Review Your Team
        br
        div
        +progress(2,3)

        div(class='card')
          div(class='card-header')
            //icon img() ?
            h2 Your Team
          div#service-list
            

        // /---------------\   /---------\
        // | Your Team (1) |   | Contact |
        // \---------------/   \---------/

        .bottom-buttons
          input#nameInput(type='text' placeholder='* name') 
          input#emailPhoneInput(type='text' placeholder='* email address or phone number') 
          button.btn(onclick='submit()' style='display: inline-block;')
            h3(style='margin-top: 0; margin-bottom: 0;') Submit
      +footer('../..')